<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:padding="16dp"
        android:layout_margin="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:orientation="vertical"


                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="Nombre:"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="Correo:"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="Edad:"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="RFC:"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="ID empleado:"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/xbuscar_nombre_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="@font/raleway_light"
                    android:gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="Nombre empleado"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xbuscar_correo_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="@font/raleway_light"
                    android:gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="Correo empleado"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xbuscar_edad_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="@font/raleway_light"
                    android:gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="Edad empleado"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xbuscar_RFC_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="@font/raleway_light"
                    android:gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="RFC empleado"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xbuscar_ID_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="@font/raleway_light"
                    android:gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="ID empleado"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>